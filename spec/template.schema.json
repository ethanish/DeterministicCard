{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "template.schema.json",
    "title": "SDT Template Specification",
    "type": "object",
    "required": ["schema_version", "id", "name", "domain", "fields"],
    "properties": {
      "schema_version": { "$ref": "common.schema.json#/$defs/schema_version" },
      "id": { "$ref": "common.schema.json#/$defs/id" },
      "name": { "$ref": "common.schema.json#/$defs/name" },
      "domain": { "$ref": "common.schema.json#/$defs/domain" },
      "description": { "type": "string" },
  
      "capture_modes": {
        "type": "array",
        "items": {
          "$ref": "common.schema.json#/$defs/capture_mode"
        },
        "default": ["text"]
      },
  
      "fields": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["key", "type"],
          "properties": {
            "key": { "type": "string" },
            "type": {
              "$ref": "common.schema.json#/$defs/field_type"
            },
            "label": { "type": "string" },
            "optional": { "type": "boolean", "default": true }
          }
        }
      },
  
      "metrics": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["key"],
          "properties": {
            "key": { "type": "string" },
            "formula": { "type": "string" },
            "display": { "type": "string" }
          }
        }
      },
  
      "sdt_support": { "$ref": "common.schema.json#/$defs/sdt_support" }
    }
  }
  
