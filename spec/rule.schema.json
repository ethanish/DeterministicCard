{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SDT Rule Specification",
    "type": "object",
    "required": ["id", "template_id", "enabled", "conditions"],
    "properties": {
      "id": { "type": "string" },
      "template_id": { "type": "string" },
      "enabled": { "type": "boolean", "default": false },
  
      "conditions": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["count", "streak", "threshold", "time_window"]
            },
            "field": { "type": "string" },
            "value": { "type": "number" },
            "window": { "type": "string" }
          }
        }
      },
  
      "effects": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["nudge", "reward_candidate", "discount_candidate"]
            },
            "message": { "type": "string" }
          }
        }
      }
    }
  }
  