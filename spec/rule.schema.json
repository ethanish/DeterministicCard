{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "rule.schema.json",
    "title": "SDT Rule Specification",
    "type": "object",
    "required": ["schema_version", "id", "template_id", "enabled", "conditions"],
    "properties": {
      "schema_version": { "$ref": "common.schema.json#/$defs/schema_version" },
      "id": { "$ref": "common.schema.json#/$defs/id" },
      "template_id": { "type": "string" },
      "enabled": { "type": "boolean", "default": false },
  
      "conditions": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "$ref": "common.schema.json#/$defs/condition_type"
            },
            "field": { "type": "string" },
            "value": { "type": "number" },
            "window": { "type": "string" }
          }
        }
      },
  
      "effects": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "$ref": "common.schema.json#/$defs/effect_type"
            },
            "message": { "type": "string" }
          }
        }
      }
    }
  }
  
